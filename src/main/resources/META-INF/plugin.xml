<idea-plugin url="https://github.com/JetBrains-Research/anti-copy-paster">
    <id>org.jetbrains.research.anticopypaster</id>
    <name>AntiCopyPaster</name>
    <vendor>JetBrains</vendor>
    <version>2023.2-2.0</version>

    <description><![CDATA[
    Tracks the copying and pasting actions and suggests extracting duplicates into a new method. Based on imbalanced-pruned experiment.
    ]]></description>

    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.python-core-capable</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <copyPastePreProcessor
                implementation="org.jetbrains.research.anticopypasterpython.ide.AntiCopyPastePreProcessor"/>
        <notificationGroup
                id="Extract Method suggestion"
                displayType="BALLOON"/>
        <projectConfigurable
                parentId="tools"
                instance="org.jetbrains.research.anticopypasterpython.config.ProjectSettingsConfigurable"
                id="org.jetbrains.research.anticopypasterpython.config.ProjectSettingsConfigurable"
                displayName="AntiCopyPaster"/>
        <postStartupActivity
                implementation="org.jetbrains.research.anticopypasterpython.statistics.AntiCopyPasterTelemetry"/>
    </extensions>
</idea-plugin>